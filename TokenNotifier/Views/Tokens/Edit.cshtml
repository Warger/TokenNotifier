@model TokenNotifier.Models.Token

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Token</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TokenID" />
            <div class="form-group">
                <label asp-for="Decimals" class="control-label"></label>
                <input asp-for="Decimals" class="form-control" />
                <span asp-validation-for="Decimals" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShortName" class="control-label"></label>
                <input asp-for="ShortName" class="form-control" />
                <span asp-validation-for="ShortName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contract" class="control-label"></label>
                <input asp-for="Contract" class="form-control" />
                <span asp-validation-for="Contract" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsObserved" /> @Html.DisplayNameFor(model => model.IsObserved)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PercentForNotification" class="control-label"></label>
                <input asp-for="PercentForNotification" class="form-control" />
                <span asp-validation-for="PercentForNotification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalSupply" class="control-label"></label>
                <input asp-for="TotalSupply" class="form-control" />
                <span asp-validation-for="TotalSupply" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
