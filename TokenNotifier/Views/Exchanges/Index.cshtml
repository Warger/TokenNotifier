@model IEnumerable<TokenNotifier.ViewModels.ExchangeForView>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Exchange
            </th>
            <th>
                Number of tokens 
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Exchange.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tokens.Count)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Exchange.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Exchange.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Exchange.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
